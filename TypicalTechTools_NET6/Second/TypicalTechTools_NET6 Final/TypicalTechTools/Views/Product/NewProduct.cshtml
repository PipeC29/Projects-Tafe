@model TypicalTechTools.Models.Product

<style>
    body {
        background-color: #EEEEEE;
    }
</style>

<h1 style="font-family: Arial, Helvetica, sans-serif;">Add New Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <input type="submit" value="Submit New Product" class="btn btn-lg btn-primary" /> 
            </div>
        </form>
    </div>
</div>

<div>
    <!-- Redirect back to home page -->
    <a asp-action="Index" asp-controller="Product" class="btn btn-lg btn-danger">Back</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}