@model TypicalTechTools.Models.LoginUserDTO

@{
    ViewData["Title"] = "AdminLogin";
    var message = ViewBag.LoginError ?? "";
}

<div class="alert-info"> 
   
</div> 

<h2 class="text-danger>@message</h2>

<hr />
<div class="container border" style="padding:20px">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AdminLogin" class="form-signin">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control" id="userName"  style="font-size: 28px; font-weight: lighter; text-align: center;">
                    <label for="userName">User Name</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control " id="password" type="password"  style="font-size: 28px; font-weight: lighter; text-align: center;">

                    <label for="password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
            </form>
        </div>
    </div>
</div>


    <div class="text-center">
        <a asp-action="Index" asp-controller="Product" class="btn btn-danger" style="font-size: 28px ">Back to Product</a>
    </div>
  
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
