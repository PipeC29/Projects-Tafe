@model Supermarket3.Models.ShoppingCart

@{
    ViewData["Title"] = "HistoryDetails";
}

<h1>Purchase Details</h1>

<div>
    <hr />
    <dl class="row theme-background-0">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("0.00")
        </dd>

    </dl>
</div>

<h2>Items Purchased</h2>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                QTY
            </th>
            <th>
                Line Total
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @((item.Quantity * item.ProductItem.Price).ToString("0.00"))
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="History">Back to List</a>
</div>
